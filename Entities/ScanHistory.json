{
  "name": "ScanHistory",
  "type": "object",
  "properties": {
    "scanType": {
      "type": "string",
      "enum": [
        "file_upload",
        "github_repository",
        "website_infrastructure",
        "api_security"
      ],
      "description": "Type of scan performed"
    },
    "targetName": {
      "type": "string",
      "description": "File name, GitHub URL, website URL, or API endpoint that was scanned"
    },
    "summary": {
      "type": "object",
      "properties": {
        "critical": {
          "type": "number"
        },
        "high": {
          "type": "number"
        },
        "medium": {
          "type": "number"
        },
        "low": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      },
      "description": "Summary of vulnerabilities found"
    },
    "vulnerabilities": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Detailed vulnerability findings"
    },
    "scanDate": {
      "type": "string",
      "format": "date-time",
      "description": "When the scan was performed"
    },
    "scannedBy": {
      "type": "string",
      "description": "User who initiated the scan"
    }
  },
  "required": [
    "scanType",
    "targetName",
    "summary",
    "vulnerabilities"
  ],
  "security": {
    "create": "auth.role == 'user' || auth.role == 'admin'",
    "read": "record.scannedBy == auth.email || auth.role == 'admin'",
    "update": "auth.role == 'admin'",
    "delete": "auth.role == 'admin'"
  }
}